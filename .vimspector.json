{
  "configurations": {
    "run_tests": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "protocol": "auto",
	"python": "${workspaceRoot}/venv/bin/python3",
        "stopOnEntry": false,
	"env": {
	  "PYTHONPATH": "src"
	},
	"program":"${workspaceRoot}/src/fastiot_tests/run_tests.py", 
        "console": "integratedTerminal",
        "cwd": "${workspaceRoot}"
      },
      "breakpoints": {
      	"exception": {
	  "raised": "N",
	  "uncaught": "",
	  "userUnhandled": ""
	}
      }
    },
    "run_file": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "protocol": "auto",
	"python": "${workspaceRoot}/venv/bin/python3",
        "stopOnEntry": false,
	"env": {
	  "PYTHONPATH": "src"
	},
	"program":"${file}", 
        "console": "integratedTerminal",
        "cwd": "${workspaceRoot}"
      },
      "breakpoints": {
      	"exception": {
	  "raised": "N",
	  "uncaught": "",
	  "userUnhandled": ""
	}
      }
    }
  }
}

